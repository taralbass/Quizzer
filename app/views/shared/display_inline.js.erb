$context = $('#<%= dom_id(target, attr) %>').closest('.inline_managed_attribute');
  
$context
  .find('.inline_editable')
  .replaceWith('<%= escape_javascript render('shared/inline_displayed', :target => target, :attr => attr) %>');
  
if ($context.hasClass('updated')) {
  $context
    .removeClass('updated')
    .find('.success')
    .toggle()
    .fadeOut(3000, function() {
      $context.find('.restore').show();
    });
} else {
  $context.find('.restore').show();
}
